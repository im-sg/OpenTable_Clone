@using OpenTable.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Add User";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Add User</h2>

    <form method="post" asp-action="Add" class="bg-light p-4 rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter username"  />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password"  />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password"  />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input asp-for="DOB" hidden value="02-02-2022" type="text"/>
            <input asp-for="EmailAddress" hidden value="gmail" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Add</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
