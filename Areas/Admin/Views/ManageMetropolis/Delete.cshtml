@model OpenTable.Models.Metropolis
@{
    ViewData["Title"] = "Delete Metropolis";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Confirm Deletion</h2>
    <h3 class="text-center mb-4">@Model.Name</h3>
    <p class="text-center">Are you sure you want to delete this metropolis? This action cannot be undone.</p>

    <form asp-action="DeleteConfirmed" method="post" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="MetropolisId" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="ManageMetropolis" asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>