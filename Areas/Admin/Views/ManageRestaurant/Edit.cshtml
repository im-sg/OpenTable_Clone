@model OpenTable.Models.Restaurant
@{
    string title = ViewBag.Action + " Restaurant";
    ViewData["Title"] = title;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@title</h2>

    <form asp-action="Edit" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="mb-3">
            <label asp-for="RestaurantName" class="form-label">Restaurant Name</label>
            <input asp-for="RestaurantName" class="form-control" placeholder="Enter restaurant name" required>
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MetropolisId" class="form-label">Metropolis</label>
            <select asp-for="MetropolisId" asp-items="@(new SelectList(ViewBag.Metropolis,"MetropolisId", "Name"))" class="form-select" required>
                <option value="">Select Metropolis</option>
            </select>
            <span asp-validation-for="MetropolisId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CuisinesId" class="form-label">Cuisines</label>
            <select asp-for="CuisinesId" asp-items="@(new SelectList(ViewBag.Cuisines,"CuisinesId", "Cuisine"))" class="form-select" required>
                <option value="">Select Cuisine</option>
            </select>
            <span asp-validation-for="CuisinesId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PriceRangeId" class="form-label">Price Range</label>
            <select asp-for="PriceRangeId" asp-items="@(new SelectList(ViewBag.PriceRange,"PriceRangeId", "PriceRanges"))" class="form-select" required>
                <option value="">Select Price Range</option>
            </select>
            <span asp-validation-for="PriceRangeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OpenHours" class="form-label">Open Hours</label>
            <input asp-for="OpenHours" class="form-control" placeholder="e.g., 9 AM - 10 PM" required>
            <span asp-validation-for="OpenHours" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a brief description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter restaurant address" required>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label">Restaurant Image URL</label>
            <input asp-for="ImagePath" class="form-control" placeholder="Enter image URL" required>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="RestaurantId" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-controller="ManageRestaurant" asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>