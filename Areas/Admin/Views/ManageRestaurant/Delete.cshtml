@model OpenTable.Models.Restaurant
@{
    ViewData["Title"] = "Delete Restaurant";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Confirm Deletion</h2>
    <h3 class="text-center mb-4">@Model.RestaurantName</h3>
    <p class="text-center">Are you sure you want to delete this restaurant? This action cannot be undone.</p>

    <form asp-action="Delete" method="post" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="RestaurantId" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="ManageRestaurant" asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>