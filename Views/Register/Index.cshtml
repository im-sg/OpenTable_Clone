@model OpenTable.Models.Customer

@{
    ViewBag.Title = "Registration";
}

<div class="container mt-5">

    <form asp-action="Index" method="post">
        <!-- Username Field -->
        <div class="mb-3 row">
            <label asp-for="Username" class="col-form-label col-md-2">Username</label>
            <div class="col-md-4">
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <!-- Email Address Field -->
        <div class="mb-3 row">
            <label asp-for="EmailAddress" class="col-form-label col-md-2">Email Address</label>
            <div class="col-md-4">
                <input asp-for="EmailAddress" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <!-- Date of Birth Field -->
        <div class="mb-3 row">
            <label asp-for="DOB" class="col-form-label col-md-2">Date of Birth</label>
            <div class="col-md-4">
                <input asp-for="DOB" class="form-control" type="date" />
            </div>
            <div class="col">
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>

        <!-- Password Field -->
        <div class="mb-3 row">
            <label asp-for="Password" class="col-form-label col-md-2">Password</label>
            <div class="col-md-4">
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="col">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <!-- Confirm Password Field -->
        <div class="mb-3 row">
            <label asp-for="ConfirmPassword" class="col-form-label col-md-2">Confirm Password</label>
            <div class="col-md-4">
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
            </div>
            <div class="col">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="row">
            <div class="offset-md-2 col">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
